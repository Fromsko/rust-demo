{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "voice-tauri-app",
  "version": "0.1.0",
  "identifier": "work.voice.tauri-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "voice-tauri-app",
        "width": 1200,
        "height": 650
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' blob: data: media:; script-src 'self' 'unsafe-eval';",
        "connect-src": "ipc: http://ipc.localhost blob: data:",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "media-src": "'self' blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
